# Redirect HTTP to HTTPS for fundamentalhistory.com
server {
    listen 80;
    server_name fundamentalhistory.com www.fundamentalhistory.com;
    return 301 https://$host$request_uri;
}

# HTTPS server for fundamentalhistory.com
server {
    listen 443 ssl;
    server_name fundamentalhistory.com www.fundamentalhistory.com;

    ssl_certificate /etc/letsencrypt/live/fundamentalhistory.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/fundamentalhistory.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:8001;  # Forward to Docker port 3081
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Redirect HTTP to HTTPS for oicrt.com
server {
    listen 80;
    server_name oicrt.com www.oicrt.com;
    return 301 https://$host$request_uri;
}

# HTTPS server for oicrt.com
server {
    listen 443 ssl;
    server_name oicrt.com www.oicrt.com;

    ssl_certificate /etc/letsencrypt/live/oicrt.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/oicrt.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:8000;  # Forward to Docker port 3080
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
